# APILama Environment Variables

# Server configuration
PORT=8080
HOST=0.0.0.0
DEBUG=False

# Service URLs
PYBOX_API_URL=http://localhost:8000
PYLLM_API_URL=http://localhost:8001
SHELLAMA_API_URL=http://localhost:8002
PYLAMA_API_URL=http://localhost:8003

# In Docker environment, use these instead:
# PYBOX_API_URL=http://pybox:8000
# PYLLM_API_URL=http://pyllm:8001
# SHELLAMA_API_URL=http://shellama:8002
# PYLAMA_API_URL=http://pylama:8003

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=apilama.log

# Security settings
SECRET_KEY=change_this_to_a_secure_random_string

# CORS settings
CORS_ORIGINS=http://localhost:8081,http://127.0.0.1:8081
